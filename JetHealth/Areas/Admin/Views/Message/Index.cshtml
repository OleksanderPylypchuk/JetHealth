@model List<Message>
<partial name="_Notification" />
<div class="container">
	<div class="p-3 row justify-content-center">
		<a asp-action="DownloadMessages" class="btn btn-warning mx-2 col-3">Завантажити всі повідомлення</a>
		<a asp-action="DownloadReviews" class="btn btn-warning mx-2 col-3">Завантажити відгуки</a>
		<a asp-action="DownloadRequests" class="btn btn-warning mx-2 col-3">Завантажити заявки</a>
	</div>
	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th class="bg-primary text-white text-center">
					Id
				</th>
				<th class="bg-primary text-white text-center">
					Ім'я користувача
				</th>
				<th class="bg-primary text-white text-center">
					Вміст
				</th>
				<th class="bg-primary text-white text-center">
					Тип
				</th>
				<th class="bg-primary text-white text-center"></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var obj in Model)
			{
				<tr>
					<td>
						@obj.Id
					</td>
					<td>
						@obj.Name
					</td>
					<td>
						@obj.Content
					</td>
					<td>
						@obj.GetType()
					</td>
					<td>
						<div class="w-75 btn-group" role="group">
							@if(obj is Request)
							{
								<a asp-controller="Message" asp-route-id="@obj.Id" asp-action="DeleteRequest" class="btn btn-danger mx-2">
									<i class="bi bi-trash3"></i>Видалити
								</a>
							}
							else{
								<a asp-controller="Message" asp-route-id="@obj.Id" asp-action="DeleteReview" class="btn btn-danger mx-2">
									<i class="bi bi-trash3"></i>Видалити
								</a>
							}
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>