@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> _userManager;
@model List<ApplicationUser>

<div class="container">
	<div class="row pt-4 pb-4">
		<div class="col-6">
			<h2 class="text-primary">
				List Of Users
			</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary">
				<i class="bi bi-screwdriver"></i>Register a user
			</a>
		</div>
	</div>


	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th class="bg-primary text-white text-center">
					FirstName
				</th>
				<th class="bg-primary text-white text-center">
					LastName
				</th>
				<th class="bg-primary text-white text-center">
					Role
				</th>
				<th class="bg-primary text-white text-center">
					Email
				</th>
				<th class="bg-primary text-white text-center"></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var obj in Model.OrderBy(u => u.FirstName))
			{
				<tr>
					<td>
						@obj.FirstName
					</td>
					<td>
						@obj.LastName
					</td>
					<td>
						@_userManager.GetRolesAsync(obj).GetAwaiter().GetResult().FirstOrDefault()
					</td>
					<td>
						@obj.Email
					</td>
					<td>
						<div class="w-75 btn-group" role="group">
							<a asp-controller="User" asp-route-id="@obj.Id" asp-action="RoleManagement" class="btn btn-primary mx-2">
								<i class="bi bi-pencil-square"></i>Edit
							</a>
							<a asp-controller="User" asp-route-id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
								<i class="bi bi-trash3"></i>Delete
							</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>